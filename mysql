1)  mysql -u root -p      (password_root)
2)  CREATE DATABASE database_ibank;
3)  CREATE USER 'user_ibank'@'localhost' IDENTIFIED WITH mysql_native_password BY 'password_ibank';
4)  GRANT ALL ON database_ibank.* TO 'user_ibank'@'localhost';
5)  FLUSH PRIVILEGES;




